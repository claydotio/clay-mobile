@require '../../components/nib/index.styl'
@require '../../components/normalize.css/normalize.css'

json('./vars.json')

@font-face
  font-family: 'Roboto'
  src: url('//cdn.wtf/d/fonts/roboto/regular.ttf') format("opentype")
  font-weight: normal
  font-style: normal

@font-face
  font-family: 'Roboto'
  src: url('//cdn.wtf/d/fonts/roboto/bold.ttf') format("opentype")
  font-weight: bold
  font-style: normal

@require './module/*'

//
// Base Styles
//

html
  font-size: 62.5% /* 10px browser default */

body
  background: $bgColor
  color: $grayDark
  font: $fontSizeSmall 'Roboto'

a
  text-decoration: none
  color: $grayDark
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0)

h1
  font-size: $fontSizeLarge

h2
  font-size: $fontSizeMedium

input, label
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0)

input[type=text]
  height: 40px
  box-sizing: border-box
  padding: 5px 10px
  border-radius: $inputBorderRadius px
  background: $white
  border: 1px solid $borderColor
  outline: none

  &.is-full-width
    width: 100%

  &:focus
    border: 1px solid $disabledColor

input[type=checkbox]
  width: 20px
  height: 20px
  vertical-align: bottom
  cursor: pointer
  // No IE support!
  appearance: none
  position: relative
  outline: 0
  box-sizing: border-box
  background: $disabledColor
  border-radius: $inputBorderRadius px
  margin: 0 10px

input[type=checkbox]:checked
  background: $orange
  color: $white
  outline: 0
  &:after
    // icon font
    font-family: 'icons'
    content: '\e808'
    position: absolute
    top: 0
    left: -2px
    text-align: center
    width: 25px
    font-size: 18px
