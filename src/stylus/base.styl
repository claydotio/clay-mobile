@require 'nib'
// webpack css-loader doesn't seem to accept a paths[] option
@require '../../node_modules/normalize-css/normalize.css'
@require 'zorium-paper/base'

json('./vars.json')

@require './layout.styl'
@require './button.styl'
@require './icon.styl'

//
// Hacks
//
@require '../hacks/**/stylus/*'

//
// Base Styles
//

html
  font-size: 62.5% /* 10px browser default */

body
  zp-font-body1()
  background: $bgColor
  font-weight: 500

a
  text-decoration: none
  color: $grey900
  -webkit-tap-highlight-color: $transparent

h1
  font-size: $fontSizeLarge

h2
  font-size: $fontSizeMedium

button
  border: none
  outline: none
  appearance: none
  -webkit-tap-highlight-color: $transparent

input[type=checkbox]
  width: 20px
  height: 20px
  vertical-align: bottom
  cursor: pointer
  // No IE support!
  appearance: none
  position: relative
  outline: 0
  box-sizing: border-box
  background: $grey400
  border-radius: $inputBorderRadius px

input[type=checkbox]:checked
  background: $orange500
  color: $white
  outline: 0
  &:after
    // icon font
    font-family: 'icons'
    content: '\e808'
    position: absolute
    top: 0
    left: -2px
    text-align: center
    width: 25px
    font-size: 18px
