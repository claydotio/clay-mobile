@require '../../components/nib/index.styl'
@require '../../components/normalize.css/normalize.css'

json('./vars.json')

@font-face
  font-family: 'Roboto'
  src: url('//cdn.wtf/d/fonts/roboto/regular.ttf') format("opentype")
  font-weight: normal
  font-style: normal

@font-face
  font-family: 'Roboto'
  src: url('//cdn.wtf/d/fonts/roboto/bold.ttf') format("opentype")
  font-weight: bold
  font-style: normal

@require './module/*'
@require './layout.styl'

//
// Hacks
//
@require '../hacks/**/stylus/*'

//
// Base Styles
//

html
  font-size: 62.5% /* 10px browser default */

body
  background: $bgColor
  color: $grayDark
  font: $fontSizeSmall 'Roboto'

a
  text-decoration: none
  color: $grayDark
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0)

h1
  font-size: $fontSizeLarge

h2
  font-size: $fontSizeMedium

button
  border: none
  outline: none
  appearance: none
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0)
