@require '../../components/nib/index.styl'
@require '../../components/normalize.css/normalize.css'

json('./vars.json')

@font-face
  font-family: 'Roboto'
  src: url('//cdn.wtf/d/fonts/roboto/regular.ttf') format("opentype")
  font-weight: normal
  font-style: normal

@font-face
  font-family: 'Roboto'
  src: url('//cdn.wtf/d/fonts/roboto/bold.ttf') format("opentype")
  font-weight: bold
  font-style: normal
  
/*
 * For precision spacing. Factors in the amount of spacing between the top or
 * bottom of a letter, and where the padding actually starts
 * @param (int) baseSpacing - the exact number of spacing that should exist (px)
 * @param (int) fontSize - the size of the font (rem) on the side near spacing
 * @return (int) normalized spacing (px) to be used in top/bottom, margin, padding
 */
normalizeSpacing(baseSpacing, fontSize)
  return baseSpacing - 0.23 * fontSize * 10

@require './module/*'
@require './layout.styl'

//
// Hacks
//
@require '../hacks/**/stylus/*'

//
// Base Styles
//

html
  font-size: 62.5% /* 10px browser default */

body
  background: $bgColor
  color: $grayDark
  font: $fontSizeSmall 'Roboto'

a
  text-decoration: none
  color: $grayDark
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0)

h1
  font-size: $fontSizeLarge

h2
  font-size: $fontSizeMedium

button
  border: none
  outline: none
  appearance: none
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0)
