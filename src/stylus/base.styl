json('./vars.json')

@font-face
  font-family: 'Roboto'
  src: url('//cdn.wtf/d/fonts/roboto/regular.ttf') format("opentype")

@require './module/*'

//
// Base Styles
//

html
  font-size: 62.5% /* 10px browser default */

body
  background: $bgColor
  color: $black
  font: $fontSizeDefault 'Roboto'

a
  text-decoration: none
  color: #000
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0) 
