$buttonRadius = 20
$primaryButtonHeight = 40

.button-primary, .button-secondary, .button-circle
  position: relative // for active state
  display: inline-block
  height: $primaryButtonHeight px
  margin-bottom: 0 // for input.button-...
  border-radius: $buttonRadius px
  box-shadow: 0.5px 0.866px 3px 0px rgba(0, 0, 0, 0.3)
  font-size: $fontSizeMedium
  font-weight: bold
  touch-action: manipulation
  cursor: pointer
  white-space: nowrap

  &.is-block
    display: block
    width: 100% // because bootstrap does it

  &.is-blue // different from primary or secondary
    background: $blue
    color: $white

  &:disabled
    opacity: 0.5
    cursor: not-allowed
    pointer-events: none

  // darken the button when active
  // stylus has a darken() function, but this implementation will use the
  // button's background color, opposed to one we specify
  &:active
    &:before
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      border-radius: $buttonRadius px
      background: $activeBgColor
      content: ''
      pointer-events: none

.button-primary, .button-secondary
  padding: 0 20px

.button-circle
  width: $primaryButtonHeight px
  height: $primaryButtonHeight px

.button-primary
  background: $orange
  color: $white

.button-secondary
  background: $white
  color: $blue

.button-ghost
  background: none
  font-size: $fontSizeMedium
  font-weight: bold
  padding: 5px
  text-align: center
  color: $orange

  &.is-block
    display: block
    width: 100% // because bootstrap does it

  &:disabled
    color: $disabledColor

  &:active
    background: $activeBgColor
