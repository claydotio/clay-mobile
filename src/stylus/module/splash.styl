$splashActionsHeight = 80
$splashBlueJpg = 'http://cdn.wtf/d/images/poly/splash_blue.jpg'

.splash

.splash-info
  // We can get 100% height without position fixed, but it requires all
  // parent elements to have 100% height (which is too depending on the
  // environment for the component)
  position: fixed
  top: 0
  bottom: 80px
  width: 100%
  height: 100%
  box-sizing: border-box
  background: url($splashBlueJpg)
  background-size: auto 100%
  color: #fff

  > .splash-info-logo
    position: absolute
    bottom: 60%
    width: 100%
    height: 100px
    background: url($cloudSvg) no-repeat center
    background-size: 160px 120px

  > .splash-info-headlines
    position: absolute
    top: 55%
    width: 100%
    font-weight: lighter
    text-align: center
    font-size: $fontSizeLarge
    font-weight: lighter

    > .splash-info-headline
      margin: 0 0 30px 0

.splash-actions
  position: fixed
  bottom: 0
  width: 100%
  height: $splashActionsHeight px
  padding: 0 20px
  box-sizing: border-box
  background: #fff
  text-align: center

  > .splash-login
    width: 100%
    max-width: 320px
    margin: (($splashActionsHeight - $primaryButtonHeight) / 2)px 0
