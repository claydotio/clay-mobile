$buttonRadius = 20

.button-primary, .button-secondary
  height: $primaryButtonHeight px
  max-width: 320px
  border: none
  border-radius: $buttonRadius px
  box-shadow: 0.5px 0.866px 3px 0px rgba(0, 0, 0, 0.3)
  box-sizing: border-box
  padding: 0 20px
  font-size: $fontSizeMedium
  font-weight: bold
  position: relative
  outline: none
  appearance: none
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0)

  &.is-full
    width: 100%

  &:disabled
    opacity: 0.5

  &:active
    &:before
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      border-radius: $buttonRadius px
      background: $activeBgColor
      content: ''
      pointer-events: none

.button-primary
  background: $orange
  color: $white

.button-secondary
  background: $white
  color: $blue

.button-ghost
  background: none
  border: none
  outline: none
  font-size: $fontSizeMedium
  font-weight: bold
  padding: 5px
  text-align: center
  color: $orange

  &.is-block
    display: block
    width: 100%

  &:disabled
    color: $disabledColor

  &:active
    background: $activeBgColor
