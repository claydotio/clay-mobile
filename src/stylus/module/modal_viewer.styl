.modal-viewer-overlay
  background: $overlayColor
  position: fixed
  z-index: $zIndexModal
  display: table
  width: 100%
  height: 100%

// necessary for flexible-height verically centered
.modal-viewer-container
  display: table-cell
  vertical-align: middle
  width: 100%
  padding: 20px

.modal-viewer
  width: 100%
  max-width: 320px
  margin: 0 auto
  background: $bgColor
  border-radius: 3px
  overflow: hidden // chop off unrounded corners in children elements
  position: relative

.modal-viewer-overlay.theme-bottom-dock
  display: block

  .modal-viewer-container
    display: block
    position: absolute
    bottom: 0
    padding: 0

  .modal-viewer
    max-width: none
    border-radius: 0
