.game-menu
  background: $white
  height: 50px
  font-size: 1.6rem
  font-weight: bold
  padding-left: 20px
  box-shadow: 0px 10px 10px 0px rgba(0, 0, 0, 0.04)
  position: relative

  > a
    color: $grayLight
    height: 50px
    line-height: 50px
    display: inline-block
    box-sizing: border-box
    margin-right: 10px
    padding: 0 10px

    &:hover
      color: $grayDark

  > .is-selected
    color: $orange
    border-bottom: 1px solid $orange

    &:hover
      color: $orange
