.welcome-header
  width: 100%
  height: 140px
  display: table
  background-image: url($headerOrangeJpg)
  background-size: 100% 100%
  color: #fff
  text-align: center
  @media (min-height: ($mediaBreakpointPortraitHeight1)px)
    height: 200px

  // necessary to vertically center
  > .welcome-header-content
    display: table-cell
    vertical-align: middle

.welcome-header-description
  color: $grayDark
  font-size: $fontSizeLarge
  font-weight: lighter
  margin-bottom: 10px

.welcome-header-username
  color: #fff
  font-size: $fontSizeXLarge
  font-weight: bold

.welcome-content
  padding: 0 20px
  text-align: center

.welcome-content-description
  font-size: $fontSizeMedium
  font-weight: lighter
  // using margin causes margin collapse
  // (http://www.sitepoint.com/web-foundations/collapsing-margins/)
  padding: 20px 0 0 0
  @media (min-height: ($mediaBreakpointPortraitHeight1)px)
    padding: 20px 0

.welcome-content-input-header
  font-size: $fontSizeSmall
  font-weight: bold
  // using margin causes margin collapse
  // (http://www.sitepoint.com/web-foundations/collapsing-margins/)
  padding: 20px 0

.welcome-content-start-playing
  margin: 0 0 10px 0
  @media (min-height: ($mediaBreakpointPortraitHeight1)px)
    margin: 20px 0
