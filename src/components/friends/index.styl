@require 'nib'

json('../../stylus/vars.json')

$zIndexFriendsFab = 1

.z-friends
  > .no-friends
    position: absolute
    left: 0
    top: 50%
    width: 100%
    height: 200px
    margin-top: -100px
    text-align: center

    > .icon-group
      font-size: $iconXXLarge
      color: $greyMedium

  > .friends
    list-style-type: none
    margin: 0
    padding: 0

    > .friend
      > .friend-link
        padding: 16px 0

        > .friend-pic
          width: 48px
          height: 48px
          border-radius: 50%
          margin-right: 16px

        > .friend-info
          > .name
            font-size: $fontSizeMedium

          > .game
            font-size: $fontSizeSmall
            color: $greyDark

        > .game-pic
          margin-left: auto
          width: 32px
          height: 32px

  > .fab
    position: fixed
    right: 16px
    bottom: 16px
    z-index: $zIndexFriendsFab
