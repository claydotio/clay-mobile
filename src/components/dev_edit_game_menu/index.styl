@require 'nib'

json('../../stylus/vars.json')

.z-dev-edit-game-menu
  > .menu
    box-shadow: 0px 1px 4px 0px rgba(0, 0, 0, 0.2)
    width: 240px
    margin: 20px 40px 20px 0
    font-size: $fontSizeMedium
    border-radius: 3px

    > .menu-item
      display: block
      background: $white
      font-weight: bold
      color: $greyDarker
      border-radius: 3px
      overflow: hidden

      .icon-check
        border-radius: 12px
        width: 24px
        height: 24px
        line-height: 24px
        margin-left: auto
        margin-right: 10px
        background: $greyLighter
        color: $white
        font-size: $iconTiny
        text-align: center
        box-sizing: border-box
        padding: 1px 2px 0 0

      &.is-selected
        color: $black
        background: $greyLightest
        position: relative

        &:before
          content: ''
          background: $orange
          height: 100%
          width: 5px
          position: absolute

      &.is-completed
        .icon-check
          background: $blue

      .text
        padding: 15px 20px

    > .publish
      background: $blue
      color: $white
      width: 100%
      text-align: left

      &:disabled
        opacity: 0.2
        cursor: not-allowed
        pointer-events: none

      .icon-arrow-right
        margin-left: auto
        margin-right: 10px
