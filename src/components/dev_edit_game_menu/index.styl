@require 'nib'

json('../../stylus/vars.json')

.z-dev-edit-game-menu
  > .menu
    box-shadow: $z1Shadow
    width: 240px
    margin: 20px 40px 20px 0
    font-size: $fontSizeMedium
    border-radius: 3px

    > .menu-item
      display: block
      background: $white
      font-weight: bold
      color: $grey600
      border-radius: 3px
      overflow: hidden

      > .menu-item-content
        > .icon-check
          border-radius: 12px
          width: 24px
          height: 24px
          line-height: 24px
          margin-left: auto
          margin-right: 10px
          background: $grey200
          color: $white
          font-size: $iconTiny
          text-align: center
          box-sizing: border-box
          padding: 1px 2px 0 0
          transition: background 0.2s

        > .text
          padding: 15px 20px

      &.is-selected
        color: $black
        background: $grey100
        position: relative

        &:before
          content: ''
          background: $orange500
          height: 100%
          width: 5px
          position: absolute

      &.is-completed
        > .menu-item-content
          > .icon-check
            background: $blue500
            transition: background 0.2s

    > .test-game
      color: $black

      &.is-disabled
        color: $grey600
        pointer-events: none
        cursor: default

    > .publish
      background: $blue500
      color: $white
      width: 100%
      text-align: left

      &:disabled
        opacity: 0.2
        cursor: not-allowed
        pointer-events: none

      > .menu-item-content
        > .icon-arrow-right
          margin-left: auto
          margin-right: 10px
