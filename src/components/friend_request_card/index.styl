@require 'nib'

json('../../stylus/vars.json')

.z-friend-request-card_content
  > .single-friend, > .many-friends
    > .profile-pic
      width: 40px
      height: 40px
      border-radius: 50%
      margin-right: 16px

    > .friend-info
      > .title
        font-size: $fontSizeLarge
        font-weight: lighter
        margin: 0 0 12px 0

      > .description
        font-size: $fontSizeMedium
        margin: 0 0 16px 0

  > .many-friends
    > .profile-pic
      background: $orange

  > .actions
    text-align: right
