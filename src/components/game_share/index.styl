@require 'nib'

json('../../stylus/vars.json')

$gameShareHeaderHeight = 50

.z-game-share
  .z-game-share-header
    position: relative
    overflow: hidden
    height: $gameShareHeaderHeight px
    padding: 0 20px
    background: $white
    box-shadow: 0px 0px 3px 0px rgba(0, 0, 0, 0.3)

  .z-game-share-title
    margin: 0
    line-height: 50px
    font-size: $fontSizeLarge

  .z-game-share-content
    padding: 20px
    text-align: center
    font-size: $fontSizeMedium

  .z-game-share-message
    font-weight: bold
    margin-bottom: 20px
