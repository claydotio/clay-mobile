@require 'nib'

json('../../stylus/vars.json')

$borderRadius = 3px

.z-dev-edit-game-get-started
  padding: 20px 0
  transition: opacity 1s

  > .form
    > .next-step-container
      clearfix()

      > .next-step
        float: right
        margin-top: 10px

  > hr
    border: none
    height: 1px
    background: $grey200
    margin: 20px 0

  > .sdk-info
    > h1
      font-weight: lighter
      color: $grey600

    > ul
      list-style-type: none
      margin: 0
      padding: 0

      > li
        font-size: $fontSizeMedium
        margin: 20px 0
        > .icon
          color: $orange500
          font-size: $iconLarge
          margin-right: 10px
          vertical-align: middle
