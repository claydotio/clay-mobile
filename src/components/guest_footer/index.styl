@require 'nib'

json('../../stylus/vars.json')

.z-guest-footer
  padding: 40px 0
  box-sizing: border-box
  background: $greyDarkest

  > .content
    > .section
      > .title
        color: $orange
        font-size: $fontSizeLarge
        font-weight: lighter
        margin: 0 0 20px 0

      &:first-child
        margin-right: 40px

      > .links-container
        > .links
          margin: 0 40px 0 0
          padding: 0
          list-style-type: none
          color: $white

          > li
            font-size: $fontSizeMedium
            font-weight: bold
            margin: 15px 0

            > a
              color: inherit

          > li:first-child
            margin: 0 0 15px 0

    > .clay-info
      margin-left: auto
      text-align: center

      > .cloud
        height: 28px
        width: 40px
        margin-bottom: 2px

      > .copyright
        color: $greyDarker
