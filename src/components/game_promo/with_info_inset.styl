@require 'nib'

json('../../stylus/vars.json')
@require '../../stylus/utils.styl'

$zIndexGamePromoAfter = 1
$zIndexGamePromoInfo = 2

.game-promo
  -webkit-tap-highlight-color: $transparent
  font-size: $fontSizeSmall
  position: relative
  display: block
  box-shadow: 0px 1px 4px 0px rgba(0, 0, 0, 0.2)

  &:active
    opacity: 0.6

  &:after
    content: ''
    position: absolute
    z-index: $zIndexGamePromoAfter
    left: 0
    top: 0
    background: linear-gradient(bottom, $grayDark 0, $transparent 60px)
    width: 100%
    height: 100%

.game-promo-info
  position: absolute
  z-index: $zIndexGamePromoInfo
  bottom: 5px
  left: 5px


  > h3
    color: $white
    font-size: $fontSizeSmall
    margin: normalizeSpacing(5, unit($fontSizeSmall, '')) px
    white-space: nowrap
    overflow: hidden
    text-overflow: ellipsis
