@require 'nib'

json('../../stylus/vars.json')

.z-game-promo
  -webkit-tap-highlight-color: $transparent
  font-size: $fontSizeSmall
  display: block
  margin: 0 5px

  &:active
    opacity: 0.6

  > .image
    background-size: auto 100%
    background-position: center

  > .info
    text-align: left
    width: 100%

    > h3
      font-size: $fontSizeSmall
      margin: 3px
      white-space: nowrap
      overflow: hidden
      text-overflow: ellipsis
