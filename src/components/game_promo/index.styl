@require 'nib'
@require '../../node_modules/zorium-paper/base.styl'

json('../../stylus/vars.json')

.z-game-promo
  -webkit-tap-highlight-color: $transparent
  font-size: $fontSizeSmall
  display: block
  margin: 0 5px

  &:active
    opacity: 0.6

  > .image
    box-shadow: $z1Shadow
    border-radius: 2px

  > .info
    text-align: left
    width: 100%

    > h3
      zp-font-caption()
      margin: 3px
      white-space: nowrap
      overflow: hidden
      text-overflow: ellipsis
