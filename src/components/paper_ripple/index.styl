@require 'nib'
json('../../stylus/paper_colors.json')

@keyframes z-ripple-animation
  from
    width: 10px
    height: 10px
    margin-top: -5px
    margin-left: -5px
    opacity: 0.25
  to
    width: 1000px
    height: 1000px
    margin-top: -500px
    margin-left: -500px
    opacity: 0

@keyframes z-ripple-animation-small
  from
    width: 10px
    height: 10px
    margin-top: -5px
    margin-left: -5px
    opacity: 0.25
  to
    width: 48px
    height: 48px
    margin-top: -24px
    margin-left: -24px
    opacity: 0

.z-ripple
  position: absolute
  border-radius: 50%
  background: $white
  animation: z-ripple-animation 1.5s
  pointer-events: none

  &.is-small
    animation: z-ripple-animation-small 0.5s
