@require 'nib'

json('../../stylus/vars.json')
.z-dev-dashboard-header
  background: $white
  height: 75px

  .logo
    > img
      height: 50px
      vertical-align: middle

  .navigation
    margin-left: auto
    height: 100%

    > ul
      // offset li gap margin
      margin: 0
      padding: 0
      list-style-type: none
      height: 100%

      > li
        display: inline-block
        margin: 0 20px
        height: 100%

        a
          font-weight: normal
          font-size: $fontSizeMedium
          display: inline-block
          vertical-align: middle
          color: $greyDarker

        &.is-selected
          position: relative

          &:after
            content: '\2022'
            position: absolute
            bottom: 0
            left: 0
            width: 100%
            font-size: $fontSizeLarge
            text-align: center
            color: $orange

          a
            color: $black


    > img
      width: 50px
      vertical-align: middle
