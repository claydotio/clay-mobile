json('../../stylus/vars.json')

.z-icon
  text-align: center
  min-width: 48px
  min-height: 48px
  display: flex

  > svg
    vertical-align: middle
    margin: auto

  &.is-aligned-left
    margin-left: -12px // touch target offset

  &.is-aligned-right
    margin-right: -12px // touch target offset
