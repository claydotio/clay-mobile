@require 'nib'

json('../../stylus/vars.json')

$borderRadius = 3px

.z-dev-dashboard-games

  > .no-games
    color: $greyDarkest
    line-height: $fontSizeLarge

    > h1
      font-weight: lighter
      color: $greyDarker

    > ul li a
      color: $orangeAccent


  > .container
    > .title
      color: $greyDarker
      font-weight: bold
      font-size: $fontSizeMedium
      padding: 20px 0
      margin: 0

    > .games
      margin: -10px

      > .game-container
        display: inline-block
        box-sizing: border-box
        width: 50%
        padding: 10px

        > .game
          box-shadow: 0px 1px 4px 0px rgba(0, 0, 0, 0.2)
          border-radius: $borderRadius

          > .actions
            border-radius: 0 0 $borderRadius $borderRadius
            background: $white
            height: 40px
            line-height: 40px
            padding: 0 20px
            font-size: $fontSizeSmall
            color: $greyDarkest
            display: flex

            > .action-links
              // offset `a` gap margin
              margin: 0 -10px

              > a
                padding: 0 10px
                color: $greyDarkest

              > .edit
                > .icon
                  color: $orange
                  padding: 0 10px

            > .status
              color: $greyDarker
              flex: 1

          > .image-content
            position: relative
            height: 110px

            > .image-background
              border-radius: $borderRadius $borderRadius 0 0
              background-size: 100% auto
              height: 100%

            > .image-overlay
              border-radius: $borderRadius $borderRadius 0 0
              position: absolute
              width: 100%
              height: 100%
              top: 0
              left: 0
              background: rgba(0, 0, 0, 0.5)
              display: flex
              align-items: center

              > img
                vertical-align: middle
                padding: 20px

              > .image-text
                display: inline-block
                vertical-align: middle
                color: $white
                font-size: $fontSizeLarge
                font-weight: bold
