@require 'nib'

json('../../stylus/vars.json')

.z-dev-dashboard-games

  > .title
    color: $grayLight
    font-weight: bold
    font-size: $fontSizeMedium
    padding: 20px

  > .container
    padding: 0 20px

    > .game-container
      display: inline-block
      box-sizing: border-box
      width: 50%
      padding: 10px

      > .game
        box-shadow: 0px 1px 4px 0px rgba(0, 0, 0, 0.2)
        border-radius: 6px

        > .actions
          border-radius: 0 0 6px 6px
          background: $white
          padding: 10px
          font-weight: bold
          font-size: $fontSizeMedium
          color: $grayDark
          display: flex

          > span
            padding: 0 10px

          > .status
            color: $grayLight
            flex: 1

          .icon
            color: $orange
            padding: 0 10px

        > .image-content
          position: relative
          height: 140px

          > .image-background
            border-radius: 6px 6px 0 0
            background: url('http://lorempixel.com/510/140/abstract')
            height: 100%

          > .image-overlay
            border-radius: 6px 6px 0 0
            position: absolute
            width: 100%
            height: 100%
            top: 0
            left: 0
            background: rgba(0, 0, 0, 0.5)
            display: flex
            align-items: center
            padding: 20px
            box-sizing: border-box

            > img
              vertical-align: middle

            > div
              display: inline-block
              vertical-align: middle
              color: $white
              padding: 20px
              font-size: $fontSizeLarge
              font-weight: bold
