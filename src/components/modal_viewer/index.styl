@require 'nib'

json('../../stylus/vars.json')

.modal-viewer-overlay
  background: $overlayColor
  position: fixed
  top: 0
  left: 0
  z-index: $zIndexModal
  display: flex
  align-items: center
  justify-content: center
  width: 100%
  height: 100%

// necessary for flexible-height verically centered
.modal-viewer-container
  width: 100%
  padding: 20px

.modal-viewer
  width: 100%
  max-width: 320px
  margin: 0 auto
  background: $bgColor
  border-radius: 3px
  overflow: hidden // chop off unrounded corners in children elements
  position: relative
