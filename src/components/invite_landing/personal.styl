@require 'nib'
@require 'zorium-paper/base'

json('../../stylus/vars.json')

$zIndexInviteLandingHeaderContent = 1

.z-invite-landing
  display: flex
  flex-direction: column

  > .header
    display: flex
    background: url('//cdn.wtf/d/images/general/dot_pattern.svg') $orange500
    text-align: center
    padding: 32px 0
    box-sizing: border-box
    position: relative

    &:after
      background: $black
      opacity: 0.5

    &:after
      content: ''
      position: absolute
      left: 0
      top: 0
      width: 100%
      height: 100%
      background: linear-gradient(top, transparent, 70% $orange500)

    > .header-content
      display: flex
      flex-direction: column
      position: relative
      z-index: $zIndexInviteLandingHeaderContent
      width: 100%
      margin-top: auto

      > .name
        zp-font-display1()
        color: $orange500Text
        max-width: 300px
        margin: 0 auto 16px auto

      > .description
        zp-font-subhead()
        margin-bottom: 0
        margin-top: auto
        color: $orange500Text

  &.has-avatar
    > .header
      background-size: 100% 100%
      background-repeat: no-repeat

      &:after
        content: ''
        position: absolute
        left: 0
        top: 0
        width: 100%
        height: 100%
        background: linear-gradient(top, transparent, 70% $orange500)

  > .content
    display: flex
    flex-direction: column
    padding: 16px
    box-sizing: border-box

    > .skip-friend
      zp-font-body1()
      margin-top: auto
      display: block
      text-align: center
      color: $grey400
