@require 'nib'
@require 'zorium-paper/base'

json('../../stylus/vars.json')

$zIndexInviteLandingHeaderContent = 1

.z-invite-landing
  display: flex
  flex-direction: column

  > .header
    background: url('//cdn.wtf/d/images/general/dot_pattern.svg') $orange500
    text-align: center
    padding: 32px 0
    box-sizing: border-box
    position: relative

    &:after
      content: ''
      position: absolute
      left: 0
      top: 0
      width: 100%
      height: 100%
      background: linear-gradient(top, transparent, 70% $orange500)

    > .header-content
      display: flex
      flex-direction: column
      position: relative
      z-index: $zIndexInviteLandingHeaderContent
      height: 100%

      > .name
        zp-font-display1()
        color: $orange500Text
        max-width: 300px
        margin: 0 auto

      > .games
        margin: auto

      > .description
        zp-font-subhead()
        margin-bottom: 0
        margin-top: auto
        color: $orange500Text

  > .content
    display: flex
    flex-direction: column
    padding: 16px
    box-sizing: border-box

    > .skip-friend
      zp-font-body1()
      margin-top: auto
      display: block
      text-align: center
      color: $grey400
