@require 'nib'

json('../../stylus/vars.json')

.z-dev-dashboard-footer
  margin-top: 60px
  height: 110px
  padding: 18px
  box-sizing: border-box
  background: $greyDarkest

  .title
    color: $greyDarker
    margin: 0 0 7px 0

  .links
    margin: 0 40px 0 0
    padding: 0
    list-style-type: none

    > li
      margin: 2px 0

      > a
        color: #fff

  .social
    // offset for li gap margin
    margin: 0 -4px
    padding: 0
    list-style-type: none

    > li
      margin: 4px
      display: inline-block

      > a.social-icon
        display: block
        width: 25px
        height: 25px
        background-size: 100% 100%

      > a.facebook
        background: url('//cdn.wtf/d/images/social/facebook.svg') #3B5998

      > a.twitter
        background: url('//cdn.wtf/d/images/social/twitter.svg') #00aced

      > a.google-plus
        background: url('//cdn.wtf/d/images/social/google_plus.svg') #dd4b39


  .clay-info
    margin-left: auto
    text-align: center

    > .cloud
      width: 40px
      margin-bottom: 2px

    > .copyright
      color: $greyDarker
