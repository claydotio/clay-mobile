@require 'nib'

json('../../stylus/vars.json')

$headerHeight = 60px

.z-header
  height: $headerHeight
  position: relative
  z-index: $zIndexHeader

  > .orange-bar
    background: $orange500
    position: fixed
    width: 100%
    top: 0
    height: $headerHeight
    box-sizing: border-box
    padding: 14px 20px
    box-shadow: 0px 1px 2px -1px rgba(0, 0, 0, 0.13), 0px 3px 6px -2px rgba(0, 0, 0, 0.2)

    > .logo
      display: inline-block
      float: left
      line-height: 30px
      background-image: url($logoSvg)
      background-repeat: no-repeat
      width: 125px
      height: 30px

    > .marketplace-share
      display: inline-block
      float: right
      line-height: 30px
