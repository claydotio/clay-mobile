@require 'nib'

json('../../stylus/vars.json')

.z-header
  background: $orange
  height: 60px
  box-sizing: border-box
  padding: 14px 20px
  box-shadow: 0px 1px 2px -1px rgba(0, 0, 0, 0.13), 0px 3px 6px -2px rgba(0, 0, 0, 0.2)
  clearfix()

.z-header-logo
  display: inline-block
  float: left
  line-height: 30px
  background-image: url($logoSvg)
  background-repeat: no-repeat
  width: 125px
  height: 30px

.z-header-marketplace-share
  display: inline-block
  float: right
  line-height: 30px
