@require 'nib'

.game-menu
  background: $orange
  height: 50px
  font-size: $fontSizeMedium
  font-weight: bold
  padding: 0 20px
  position: relative
  box-shadow: 0px 1px 2px -1px rgba(0, 0, 0, 0.13), 0px 3px 6px -2px rgba(0, 0, 0, 0.2)

  > a
    color: rgba(255, 255, 255, 0.5)
    height: 50px
    line-height: 50px
    display: inline-block
    box-sizing: border-box
    margin-right: 10px
    padding: 0 10px

    &:hover
      color: $white

  > .is-selected
    color: $white
    border-bottom: 4px solid $white
