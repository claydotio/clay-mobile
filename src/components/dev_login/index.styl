@require 'nib'

json('../../stylus/vars.json')

$zIndexContent = 1

.z-dev-login
  > .banner
    width: 100%
    height: 150px
    background: url('http://cdn.wtf/d/images/desktop_site/vector_technology.svg')
    background-size: 100% auto
    text-align: center
    position: relative

    &:after
      content: ''
      position: absolute
      width: 100%
      height: 100%
      top: 0
      left: 0
      background: $orange
      opacity: 0.9

    > .content
      width: 100%
      color: $white
      font-size: $fontSizeXLarge
      font-weight: lighter
      position: relative
      z-index: $zIndexContent

  > .login-apply
    margin-bottom: 40px

    > .login, > .apply
      width: 50%
      padding: 20px

      > h1
        margin: 0 0 10px 0

      > .friendly-message
        color: $greyDarker

      > form
        clearfix()

        > .sign-in-button, > .apply-button
          width: 200px
          margin-top: 10px
          float: right


    > .login
      margin-left: -20px

      > .tos
        text-align: right
        margin-top: 20px
        color: $greyDark

        > a
          color: inherit

  > .player-message
    width: 100%
    background: $white
    text-align: center

    > .content
      padding: 40px 0
      font-size: $fontSizeMedium
      color: $greyDark

      > h1
        font-size: $fontSizeXXLarge
        font-weight: lighter
        margin: 0 0 20px 0

      > .links
        margin-top: 20px

        > .google-play > img, .kik > img
          height: 40px
          margin-bottom: 40px

        > .google-play > img
          margin-right: 20px
