should = require('clay-chai').should()
rewire = require 'rewire'

RequestAvatarCard = rewire 'components/request_avatar_card'

describe 'RequestAvatarCard', ->
  it 'converts dataURI to blob', (done) ->
    # coffeelint: disable=max_line_length
    sampleDataUri = 'data:image/jpeg;base64,'
    # coffeelint: enable=max_line_length
    dataUriToBlob = RequestAvatarCard.__get__ 'dataUriToBlob'
    blob = dataUriToBlob sampleDataUri
    fileReader = new FileReader()
    fileReader.onload = ->
      fileReader.result.should.be sampleDataUri
      done()
    fileReader.readAsDataURL blob
